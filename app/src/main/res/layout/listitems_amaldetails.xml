<?xml version="1.0" encoding="utf-8"?>
<my.org.haluan.tarbiyahdzatiyah.views.AmalsListItems xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin">

    <!--Boolean-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/liad_rlBooleanType">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/liad_cbFlag"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Title"
            android:id="@+id/liad_boolTitle"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@id/liad_cbFlag"
            android:layout_alignParentLeft="true"/>
    </RelativeLayout>

    <!--Numeric-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/liad_llNumericType">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="Title"
            android:id="@+id/liad_numTitle"
            android:layout_toLeftOf="@id/liad_cbFlag"
            android:layout_alignParentLeft="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            tools:text="10"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:id="@+id/liad_etNumber"/>
    </LinearLayout>

    <!--Text-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/liad_llTextType">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="Title"
            android:id="@+id/liad_textTitle"
            android:layout_toLeftOf="@id/liad_cbFlag"
            android:layout_alignParentLeft="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            tools:text="Text Type"
            android:inputType="textMultiLine"
            android:gravity="left"
            android:id="@+id/liad_etText"/>
    </LinearLayout>

</my.org.haluan.tarbiyahdzatiyah.views.AmalsListItems>